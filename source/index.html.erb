<% blog.articles.each do |article| %>
<article>
  <div class="infos-article">
    <span class="tag"><%= article.tags.join(', ') %></span>
    <time datetime="2014-09-01" class="date">
      <div class="day"><%= article.date.strftime("%d") %></div>
      <div class="month"><%= article.date.strftime("%m") %></div>
    </time>
  </div>
  <h1 class="big-title homepage"><%= link_to article.title, article %></h1>
</article>
<% end %>
