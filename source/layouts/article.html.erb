          <div class ="content">
            <%= yield %>
          </div>
          <div class="navigation-arrows">
            <p class="arrow-left">
              <%= link_to_previous_article '<i class="fa fa-arrow-left"></i>' %>
            </p>
            <p class="home">
              <%= link_to '<i class="fa  fa-home"></i>', '/the-unicorn-trail' %>
